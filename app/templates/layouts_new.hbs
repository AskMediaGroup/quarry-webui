<legend>{{icon name="layoutsPage"}}Add New Layout</legend>
{{#if status}}
    {{#if status.added}}
        <div class="well well-small">
            <dl class="dl-horizontal">
                <dt>Layout added</dt>
                <dd><span class="badge badge-success">success</span></dd>
            </dl>
        </div>
        <ul class="pager">
            <li class="previous">
                <a href="#" {{action "edit" model}}>&larr; Edit New Layout</a>
            </li>
        </ul>
    {{else}}
        <div class="well well-small">
            <dl class="dl-horizontal">
                <dt>Layout not added</dt>
                <dd><span class="badge badge-important">failed</span></dd>
            </dl>
        </div>
        <ul class="pager">
            <li class="previous">
                <a href="#" {{action "retry"}}>&larr; Back to Layout Detail</a>
            </li>
        </ul>
    {{/if}}
{{else}}
    <form>
        <div class="container">
            <div class="well well-large">
                <div class="row">
                    <div class="span2">
                        <label>Name</label>
                        {{view Em.TextField
                        valueBinding="name" class="span2"}}
                    </div>
                    <div class="span2 offset1">
                    <label>Available?</label>
                        {{view Em.Checkbox
                        checkedBinding="isAvailable"}}
                    </div>
                    <div class="span2">
                    <label>Base?</label>
                        {{view Em.Checkbox
                        checkedBinding="isBase"}}
                    </div>
                    <div class="span4">
                    <label>Software RAID?</label>
                        {{view Em.Checkbox
                        checkedBinding="isSwRaid"}}
                    </div>
                </div>
            </div>
        </div>
        {{#if nameAlert}}
            <div class="alert alert-error">
                A new layout record requires a <strong>name</strong> value!
            </div>
        {{/if}}
        <div class="btn-group"><br>
            <button class="btn btn-success" type="submit" {{action "add"}}>
                {{icon name="add"}} Add Layout
            </button>
            <button class="btn" type="button" {{action "cancel"}}>
                {{icon name="cancel"}}Cancel
            </button>
        </div>
    </form>
    <hr>
    <ul class="pager">
        <li class="previous">
            {{link-to "&larr; Back to Layouts" "networks"}}
        </li>
    </ul>
{{/if}}