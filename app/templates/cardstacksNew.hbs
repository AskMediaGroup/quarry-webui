<legend>{{icon name="cardstacksPage"}}Add New Batch Job</legend>
{{#if status}}
    {{#if status.added}}
        <div class="well well-small">
            <dl class="dl-horizontal">
                <dt><span class="badge badge-success">success</span></dt>
                <dd>Batch Job added</dd>
            </dl>
        </div>
        <ul class="pager">
            <li class="previous">
                <a href="#" {{action "edit" model}}>&larr; Edit New Batch Job</a>
            </li>
        </ul>
    {{else}}
        <div class="well well-small">
            <dl class="dl-horizontal">
                <dt><span class="badge badge-important">failed</span></dt>
                <dd>Batch Job not added</dd>
            </dl>
        </div>
        <ul class="pager">
            <li class="previous">
                <a href="#" {{action "retry"}}>&larr; Back to New Batch Job Details</a>
            </li>
        </ul>
    {{/if}}
{{else}}
    <form>
        <div class="container">
            <div class="well well-large">
                <div class="row">
                    <div class="span4">
                        <label>Name</label>
                        {{view Em.TextField
                        valueBinding="name" class="span4"}}
                    </div>
                </div>
            </div>
        </div>
        {{#if nameAlert}}
            <div class="alert alert-error">
                A new batch job requires a <strong>name</strong> value!
            </div>
        {{/if}}
        <div class="btn-group"><br>
            <button class="btn btn-success" type="submit" {{action "add"}}>
                {{icon name="add"}} Add Batch Job
            </button>
            <button class="btn" type="button" {{action "cancel"}}>
                {{icon name="cancel"}}Cancel
            </button>
        </div>
    </form>
    <hr>
    <ul class="pager">
        <li class="previous">
            {{link-to "&larr; Back to Batch Jobs" "cardstacks"}}
        </li>
    </ul>
{{/if}}